<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:gravity="center|top"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mBillTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bill title"
            android:textColor="@color/primary_text" />

        <TextView
            android:id="@+id/mBillDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="BillDescription"
            android:textColor="@color/primary_text" />

        <TextView
            android:id="@+id/mBillTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="BillTime"
            android:textColor="@color/primary_text" />

        <TextView
            android:id="@+id/mBillOwner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="whobought@gmail.com"
            android:textColor="@color/primary_text"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/mBillTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="321,99 PLN"
            android:textColor="@color/primary_text" />

        <TextView
            android:id="@+id/mBillOwes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="20,41 PLN"
            android:textColor="@color/outcome" />

        <Button
            android:id="@+id/mBillPayButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/round_bg"
            android:backgroundTint="@color/primary_light"
            android:text="Pay" />

    </LinearLayout>

</androidx.cardview.widget.CardView>